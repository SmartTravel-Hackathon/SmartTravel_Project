<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="5dp"
                android:color="@color/gray" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:top="10dp" android:right="10dp" android:bottom="10dp" android:left="40dp">
        <bitmap android:src="@drawable/ic_flight" android:gravity="center_vertical|center_horizontal" />
    </item>
</layer-list>