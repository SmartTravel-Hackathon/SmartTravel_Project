<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".Ordenar_Por">

    <TextView
        android:id="@+id/textFiltros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:paddingBottom="30dp"
        android:text="@string/OrdenarPor"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/xButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/x" />

    <TextView
        android:id="@+id/textPrecios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFiltros"
        android:text="@string/Precios2"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerPrecios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPrecios"
        android:padding="10dp"
        android:entries="@array/RangoPrecios"/>

    <TextView
        android:id="@+id/blanco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerPrecios"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textDuracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blanco"
        android:text="@string/Duracion"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerDuración"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDuracion"
        android:padding="10dp"
        android:entries="@array/RangoDuracion"/>

    <TextView
        android:id="@+id/blanco2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDuración"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blanco2"
        android:text="@string/HoraSalida"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerHoraSalida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHora"
        android:padding="10dp"
        android:entries="@array/RangoSalidas"/>

    <TextView
        android:id="@+id/blanco3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerHoraSalida"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textHoraLlegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blanco3"
        android:text="@string/HoraLlegada"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerHoraLlegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHoraLlegada"
        android:padding="10dp"
        android:entries="@array/RangoLlegadas"/>

</RelativeLayout>