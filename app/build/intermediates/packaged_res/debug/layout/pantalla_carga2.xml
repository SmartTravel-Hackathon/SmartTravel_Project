<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".Pantalla_Carga2">


    <!-- Imagen del círculo de carga -->
    <ImageView
        android:id="@+id/image_loading"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/carga" />

    <!-- Texto "Buscando vuelos baratos" -->
    <TextView
        android:id="@+id/text_searching_flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_loading"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:text="Por favor espera un momento"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Texto "Usted nos dijo cuándo y dónde..." -->
    <TextView
        android:id="@+id/text_you_told_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_searching_flights"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:text="Cuanto más viajaba, más me daba cuenta de que el miedo convierte en extraños a personas que deberían ser amigos."
        android:textAlignment="center"
        android:textSize="16sp" />

</RelativeLayout>
