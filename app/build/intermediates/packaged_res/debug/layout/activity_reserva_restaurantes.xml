<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".Reserva_Restaurantes">

        <TextView
            android:id="@+id/textResHot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:paddingBottom="30dp"
            android:text="@string/ReservaRestaurantes"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/xButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/x" />

        <TextView
            android:id="@+id/textRestaurantesBog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textResHot"
            android:layout_centerInParent="true"
            android:paddingBottom="20dp"
            android:text="@string/RestaurantesBogota"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/buscador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRestaurantesBog"
            android:layout_centerInParent="true"
            android:ems="10"
            android:inputType="text"
            android:paddingBottom="16dp"
            android:text="@string/Buscador2" />

        <ImageView
            android:id="@+id/imageRestaurante1"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_below="@+id/buscador"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/restaurante1" />

        <ImageView
            android:id="@+id/imageRestaurante1.2"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_below="@id/buscador"
            android:layout_toRightOf="@id/imageRestaurante1"
            android:paddingStart="8dp"
            android:paddingBottom="4dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/restaurante2" />

        <ImageView
            android:id="@+id/imageRestaurante1.3"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_below="@id/imageRestaurante1.2"
            android:layout_toRightOf="@id/imageRestaurante1"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/restaurante3" />

        <ImageView
            android:id="@+id/imageRestaurante1.4"
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/restaurante4"
            android:layout_below="@id/buscador"
            android:layout_toRightOf="@id/imageRestaurante1.2"
            android:paddingStart="8dp"
            android:paddingBottom="4dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imageRestaurante1.5"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_below="@id/imageRestaurante1.4"
            android:layout_toRightOf="@id/imageRestaurante1.3"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/restaurante5" />

        <ImageView
            android:id="@+id/imageMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageRestaurante1"
            app:srcCompat="@android:drawable/ic_dialog_map"
            app:tint="@color/black"/>

        <TextView
            android:id="@+id/textRestaurante"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageRestaurante1"
            android:layout_toRightOf="@id/imageMapa"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="@string/Restaurante"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDireccion"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRestaurante"
            android:layout_toRightOf="@+id/imageMapa"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:text="@string/Restaurante1Ubicacion"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textPetFriendly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDireccion"
            android:layout_toRightOf="@+id/imageMapa"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:text="@string/PetFriendly"
            android:textColor="@color/green"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textPrecios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageRestaurante1"
            android:layout_toRightOf="@id/textRestaurante"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="@string/PalabraPrecios"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPorRangoPrecios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRestaurante"
            android:layout_toRightOf="@+id/textDireccion"
            android:paddingStart="10dp"
            android:text="@string/PreciosRestaurante"
            android:textSize="13sp" />

        <Button
            android:id="@+id/reservar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPetFriendly"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/green"
            android:text="@string/Reservar" />

        <TextView
            android:id="@+id/blanco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/reservar"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageRestaurante2"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_below="@+id/blanco"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/restaurante6" />

        <ImageView
            android:id="@+id/imageRestaurante2.2"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_below="@id/blanco"
            android:layout_toRightOf="@id/imageRestaurante2"
            android:paddingStart="8dp"
            android:paddingBottom="4dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/restaurante7" />

        <ImageView
            android:id="@+id/imageRestaurante2.3"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_below="@id/imageRestaurante2.2"
            android:layout_toRightOf="@id/imageRestaurante2"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/restaurante8" />

        <ImageView
            android:id="@+id/imageRestaurante2.4"
            android:layout_width="140dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/restaurante9"
            android:layout_below="@id/blanco"
            android:layout_toRightOf="@id/imageRestaurante2.2"
            android:paddingStart="8dp"
            android:paddingBottom="4dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/imageRestaurante2.5"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_below="@id/imageRestaurante2.4"
            android:layout_toRightOf="@id/imageRestaurante2.3"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/restaurante10" />

        <ImageView
            android:id="@+id/imageMapa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageRestaurante2"
            app:srcCompat="@android:drawable/ic_dialog_map"
            app:tint="@color/black"/>

        <TextView
            android:id="@+id/textRestaurante2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageRestaurante2"
            android:layout_toRightOf="@id/imageMapa2"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="@string/Restaurante2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDireccion2"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRestaurante2"
            android:layout_toRightOf="@+id/imageMapa2"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:text="@string/Restaurante2Ubicacion"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textPetFriendly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDireccion2"
            android:layout_toRightOf="@+id/imageMapa2"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:text="@string/PetFriendly"
            android:textColor="@color/green"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textPrecios2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageRestaurante2"
            android:layout_toRightOf="@id/textRestaurante2"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:text="@string/PalabraPrecios"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textPorRangoPrecios2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textRestaurante2"
            android:layout_toRightOf="@+id/textDireccion2"
            android:paddingStart="10dp"
            android:text="@string/PreciosRestaurante2"
            android:textSize="13sp" />

        <Button
            android:id="@+id/reservar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textPetFriendly2"
            android:layout_centerInParent="true"
            android:backgroundTint="@color/green"
            android:text="@string/Reservar" />

    </RelativeLayout>
</ScrollView>